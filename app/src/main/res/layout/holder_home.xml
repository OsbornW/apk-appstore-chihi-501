<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToOutline="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/holder_name_title_height"
        android:layout_marginLeft="@dimen/holder_name_title_margin_left"
        android:gravity="center_vertical"
        android:textSize="@dimen/holder_name_title_text_size" />

    <androidx.leanback.widget.HorizontalGridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/holder_name_grid_height"
        android:clipChildren="false"
        android:clipToOutline="false"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/holder_name_grid_padding_left"
        android:paddingRight="@dimen/holder_name_grid_padding_right"
        app:focusOutEnd="true"
        app:focusOutFront="true" />
</LinearLayout>