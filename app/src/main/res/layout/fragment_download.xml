<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.leanback.widget.VerticalGridView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToOutline="false"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/fragment_local_app_content_padding_left"
        android:paddingTop="@dimen/fragment_local_app_content_padding"
        android:paddingRight="@dimen/fragment_local_app_content_padding"
        android:paddingBottom="@dimen/fragment_local_app_content_padding" />
    <TextView
        android:text="@string/no_data"
        android:id="@+id/masked"
        android:textSize="@dimen/fragment_search_search_edit_text_size"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</FrameLayout>