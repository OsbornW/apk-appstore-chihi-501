<?xml version="1.0" encoding="utf-8"?>
<com.tea.store.view.MyFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/holder_category_item_margin"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToOutline="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:clipToOutline="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:foreground="@drawable/bg_app">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="@dimen/holder_category_item_card_width"
            android:layout_height="@dimen/holder_category_item_card_height"
            app:cardBackgroundColor="@android:color/holo_green_dark"
            app:cardCornerRadius="@dimen/holder_category_item_card_radius"
            app:cardElevation="0dp">

            <com.tea.store.view.MarqueeTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="@color/text_color_style_1"
                android:textSize="@dimen/holder_category_item_title_text_size" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</com.tea.store.view.MyFrameLayout>